@model List<ProductFeatureViewModel>
@{
    ViewData["Title"] = "Product Feature";
}
 

<div class="">
    <div class="form-group">
        <div class="row">
            <div class="col-4">
                <label>Name</label>
                <input type="text" class="form-control" id="txtName" />
                <input type="hidden" id="hdnFeatureId" value="0" />
            </div>
            <div class="col-4">
                <label>Value</label>
                <input type="text" class="form-control" id="txtValue" />
            </div>
            <div class="col-4">
                <button type="button" id="btnSaveFeature" class="btn btn-info ml-1" style="margin-top:30px;">Save Feature</button>
            </div>
        </div>
    </div>
</div>
<div class="card-body">
    <table id="tblFeatures" class="table table-bordered table-striped">
        <thead>
            <tr>
                
                <th>Name</th>
                <th>Value</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>
</div>


 
<script src="~/js/CustomJs/productfeature.js"></script>